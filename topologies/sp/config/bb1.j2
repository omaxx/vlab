{% extends "base.conf.j2" %}
{% block system %}
    host-name BB11;
{{ super() }}
{% endblock system %}
{% block interfaces %}
    fxp0 {
        unit 0 {
            family inet {
                address 192.168.0.1/24;
            }
        }
    }
    lo0 {
        unit 0 {
            family inet {
                address 10.0.0.1/32;
            }
            family iso {
                address 49.0001.0100.0000.0001.00;
            }
        }
    }
    ge-0/0/0 {
        unit 0 {
            family inet {
                address 10.0.255.0/31;
            }
            family iso;
            family inet6 {
                address fd00:0000:0000:0001::1/64;
            }
            family mpls;
        }
    }
{{ super() }}
{% endblock interfaces %}
